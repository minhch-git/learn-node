<% extend('../main') %>
<!-- -------------------------------------------- -->
<!-- --------------- HOME PAGE ------------------ -->
<!-- -------------------------------------------- -->
<div class="search">
  <!-- Content -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-7">
      <div class="mt-4">
        <form class="form" action="/api/tim-kiem">
          <div class="d-flex">
            <input
              type="text"
              name="id"
              class="form-control bg-dark text-primary"
              placeholder="Nhập id của lớp...."
            />
            <button
              type="submit"
              class="btn btn-sm btn-primary mx-2 px-4 text-primary fw-bold"
            >
              <i class="fas fa-search"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="mt-5 my-5">
    <h3 class="text-primary"><%- caption%></h3>
    <table class="table text-white">
      <thead class="thead-primary">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Tên Lớp</th>
          <th scope="col">MaKhoa</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(lops.length <= 0){ %>
        <tr>
          <td colspan="8" class="text-center">
            <h4 class="text-primary">Không có lớp nào?</h4>
            <a class="text-white" href="/api/tao-lop">Thêm 1 lớp mới</a>
          </td>
        </tr>
        <% } else { %> <% lops.forEach(lop => {%>
        <tr>
          <td><%-lop.id %></td>
          <td><%- lop.tenLop%></td>
          <td><%- lop.maKhoa%></td>
          <td>
            <div class="d-flex">
              <a
                href="/api/cap-nhap-lop/<%- lop.id%>"
                class="btn btn-info text-white"
                >Update</a
              >
              <a href="/api/xoa-lop/<%- lop.id%>" class="btn btn-danger">Xóa</a>
            </div>
          </td>
        </tr>
        <%})%> <% } %>
      </tbody>
    </table>
  </div>
</div>
