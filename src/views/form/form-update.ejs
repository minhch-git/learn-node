<% extend('../main') %>
<!-- -------------------------------------------- -->
<!-- --------------- HOME PAGE ------------------ -->
<!-- -------------------------------------------- -->
<div class="form">
  <!-- Content -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="mt-4">
        <form action="/api/cap-nhap-lop/<%- lop.id%>" method="POST">
          <div class="mb-3">
            <label class="form-label">Tên Lớp</label>
            <input
              required
              type="text"
              value="<%- lop.tenLop%>"
              name="tenLop"
              class="form-control bg-dark text-primary"
              placeholder="Nhập tên lớp..."
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Khoa</label>
            <select
              name="maKhoa"
              class="form-select bg-dark text-primary"
              aria-label="Default select example"
            >
              <% khoas.forEach((khoa) => {%> <% if(khoa.id == lop.maKhoa){ %>
              <option value="<%- khoa.id%>" selected><%- khoa.tenKhoa%></option>
              <% } else { %>
              <option value="<%- khoa.id%>"><%- khoa.tenKhoa%></option>
              <% } %> <%})%>
            </select>
          </div>
          <button
            type="submit"
            class="btn btn-primary w-100 bg-dark text-primary"
          >
            Cập nhập
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
